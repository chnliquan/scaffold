{
  "name": "@eljs/scaffold",
  "version": "0.0.0",
  "description": "Lightweight scaffolding tool",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "bin": {
    "scaffold": "bin/index.js"
  },
  "files": [
    "bin/",
    "lib/"
  ],
  "scripts": {
    "lint": "eslint 'src/**/*.@(js|ts)' --fix && npm-ensure -t deps",
    "prettier": "prettier --write 'lib/**/*.@(js|ts)'",
    "test": "npm run test:once -- --watch",
    "test:once": "jest --runInBand --forceExit --colors",
    "coverage": "jest --coverage",
    "watch": "tsc -w",
    "build": "rimraf lib && tsc --sourceMap false",
    "prerelease": "npm run lint && npm run test:once && npm run build",
    "release": "release --repo-type=github",
    "release:quick": "release --repo-type=github"
  },
  "dependencies": {
    "@eljs/node-utils": "^0.2.0",
    "commander": "^7.0.0",
    "fs-extra": "^9.0.1",
    "is-text-path": "^2.0.0",
    "moment": "^2.29.1",
    "npm-package-arg": "^8.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@eljs/release": "^0.2.0",
    "@types/fs-extra": "^9.0.6",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.21",
    "@types/npm-package-arg": "^6.1.0",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.11",
    "npm-ensure": "^1.2.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{bin,src,test}/**/*.{js,ts}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "ensure": {
    "deps": {
      "checkDirs": [
        "bin/**/*",
        "src/**/*"
      ]
    }
  },
  "keywords": [
    "scaffold",
    "node"
  ],
  "author": "liquan",
  "repository": {
    "type": "git",
    "url": "https://github.com/chnliquan/scaffold"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "license": "MIT"
}
