{
  "name": "@eljs/scaffold",
  "version": "0.2.0",
  "description": "Lightweight scaffolding tool",
  "keywords": [
    "node scaffold",
    "cli"
  ],
  "main": "dist/scaffold.cjs.js",
  "module": "dist/scaffold.esm.js",
  "types": "dist/scaffold.d.ts",
  "bin": {
    "scaffold": "bin/scaffold.js"
  },
  "files": [
    "bin/",
    "dist/"
  ],
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "node scripts/build.js",
    "lint": "eslint 'src/**/*.@(js|ts)' --fix",
    "format": "prettier --write 'src/**/*.@(js|ts)'",
    "test": "npm run test:once -- --watch",
    "test:once": "jest --runInBand --colors --forceExit",
    "coverage": "codecov",
    "release": "node scripts/release.js"
  },
  "dependencies": {
    "@eljs/node-utils": "^0.6.0",
    "commander": "^7.0.0",
    "fs-extra": "^9.0.1",
    "is-text-path": "^2.0.0",
    "leven": "^3.1.0",
    "moment": "^2.29.1",
    "npm-package-arg": "^8.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@eljs/release": "^0.5.2",
    "@microsoft/api-extractor": "^7.19.4",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^4.0.0",
    "@types/fs-extra": "^9.0.3",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/npm-package-arg": "^6.1.1",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "chalk": "^4.1.2",
    "codecov": "^3.8.3",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "execa": "^5.1.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "minimist": "^1.2.5",
    "prettier": "^2.5.1",
    "rollup": "^2.69.0",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.6.0",
    "tslib": "^2.3.1",
    "typescript": "4.5.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{bin,src,test}/**/*.{js,ts}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "author": "liquan",
  "repository": {
    "type": "git",
    "url": "https://github.com/chnliquan/scaffold"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "license": "MIT"
}
